generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @map("_id") @default(auto()) @db.ObjectId
  name     String    @unique
  products Product[]
}

model Product {
  id          String     @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  description String?
  price       Float
  inStock     Boolean    @default(true)
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  cartItems   CartItem[] // reverse relation for CartItem
}

model CartItem {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
}  